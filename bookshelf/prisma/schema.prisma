generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  avatarUrl    String?
  bio          String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  shelves           Shelf[]
  reviews           Review[]
  readingProgress   ReadingProgress[]
  followers         Follow[]          @relation("Following")
  following         Follow[]          @relation("Follower")
  bookLocations     BookLocation[]    // Locations this user contributed
  authorLocations   AuthorLocation[]  // Author locations this user contributed

  @@map("users")
}

model Book {
  id            String   @id @default(cuid())
  title         String
  author        String
  isbn          String?  @unique
  description   String?
  coverUrl      String?
  pageCount     Int?
  publishedDate String?
  genres        String[] @default([])
  openLibraryId String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // V3 map feature fields (nullable for future use)
  settingLocation          String?
  settingCoordinates       String? // JSON string: {"lat": number, "lng": number}
  authorOrigin             String?
  authorOriginCoordinates  String? // JSON string: {"lat": number, "lng": number}

  // Fictional location support
  isFictional        Boolean          @default(false)
  fictionalWorldId   String?
  fictionalWorld     FictionalWorld?  @relation(fields: [fictionalWorldId], references: [id])

  // Relations
  reviews         Review[]
  shelfItems      ShelfItem[]
  readingProgress ReadingProgress[]
  locations       BookLocation[]    // Crowdsourced location data

  @@index([title])
  @@index([author])
  @@index([fictionalWorldId])
  @@map("books")
}

model FictionalWorld {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Middle-earth", "Arrakis", "Macondo"
  description String?
  mapImageUrl String?  // DEPRECATED: Use maps relation instead
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  books         Book[]
  bookLocations BookLocation[]  // Fictional locations in this world
  maps          FictionalWorldMap[]

  @@map("fictional_worlds")
}

model FictionalWorldMap {
  id               String   @id @default(cuid())
  fictionalWorldId String
  imageUrl         String
  title            String
  description      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  fictionalWorld FictionalWorld @relation(fields: [fictionalWorldId], references: [id], onDelete: Cascade)

  @@index([fictionalWorldId])
  @@map("fictional_world_maps")
}

model Shelf {
  id        String   @id @default(cuid())
  userId    String
  name      String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  shelfItems ShelfItem[]

  @@unique([userId, name])
  @@map("shelves")
}

model ShelfItem {
  id      String   @id @default(cuid())
  shelfId String
  bookId  String
  addedAt DateTime @default(now())

  // Relations
  shelf Shelf @relation(fields: [shelfId], references: [id], onDelete: Cascade)
  book  Book  @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([shelfId, bookId])
  @@map("shelf_items")
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  rating    Int      @db.SmallInt // 1-5
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("reviews")
}

model ReadingProgress {
  id          String    @id @default(cuid())
  userId      String
  bookId      String
  currentPage Int       @default(0)
  startedAt   DateTime  @default(now())
  finishedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("reading_progress")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  // Relations
  follower  User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("follows")
}

// Crowdsourced location data - Wikipedia-style contributions

model BookLocation {
  id          String   @id @default(cuid())
  bookId      String
  addedById   String
  name        String   // e.g., "Arrakis", "Paris", "Shire"
  type        String   // "setting", "mentioned", "inspired_by"
  description String?  // User's note about this location
  coordinates String?  // JSON: {"lat": number, "lng": number} - null for fictional
  isFictional Boolean  @default(false)
  fictionalWorldId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  book           Book            @relation(fields: [bookId], references: [id], onDelete: Cascade)
  addedBy        User            @relation(fields: [addedById], references: [id], onDelete: Cascade)
  fictionalWorld FictionalWorld? @relation(fields: [fictionalWorldId], references: [id])

  @@index([bookId])
  @@index([addedById])
  @@map("book_locations")
}

model Author {
  id          String   @id @default(cuid())
  name        String   @unique
  bio         String?
  photoUrl    String?
  birthYear   Int?
  deathYear   Int?
  openLibraryId String? @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  locations AuthorLocation[]

  @@map("authors")
}

model AuthorLocation {
  id          String   @id @default(cuid())
  authorId    String
  addedById   String
  name        String   // e.g., "Oxford, UK", "Cartagena, Colombia"
  type        String   // "birthplace", "residence", "death", "worked"
  description String?  // User's note about this location
  coordinates String   // JSON: {"lat": number, "lng": number}
  yearStart   Int?     // When they were at this location
  yearEnd     Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  author  Author @relation(fields: [authorId], references: [id], onDelete: Cascade)
  addedBy User   @relation(fields: [addedById], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([addedById])
  @@map("author_locations")
}
